    <!-- Dark-mode toggle -->
    <button class="theme-toggle" id="themeToggle" onclick="toggleTheme()" aria-label="Toggle dark mode">üåô</button>
    <!-- Floating hearts layer -->
    <div class="hearts" id="hearts"></div>
    <!-- Main card -->
    <div class="container" id="mainCard">
        <div class="emoji-topper" id="topperEmoji">ü•∫</div>
        <h1 id="question">Mithila, will you forgive me?</h1>
        <p class="subtitle" id="subtitle">Every love story has its bumps‚Ä¶ ours just needs a little forgiveness üíï</p>
        <!-- Progress dots -->
        <div class="progress" id="progressDots">
            <span class="dot active"></span>
            <span class="dot"></span>
            <span class="dot"></span>
            <span class="dot"></span>
            <span class="dot"></span>
        </div>
        <div class="btn-group">
            <button id="yesBtn" onclick="yesAnswer()">Yes üíï</button>
            <button id="noBtn" onclick="noAnswer()">No üò¢</button>
        </div>
    </div>
    <script>
        // ‚îÄ‚îÄ Question data ‚îÄ‚îÄ
        const questions = [
            {
                text: "Mithila, will you forgive me?",
                emoji: "ü•∫",
                sub: "Every love story has its bumps‚Ä¶ ours just needs a little forgiveness üíï"
            },
            {
                text: "Can we start fresh and create new memories?",
                emoji: "üå∏",
                sub: "I'll make every new moment count, I promise ‚ú®"
            },
            {
                text: "Will you give this silly human one more chance?",
                emoji: "üêª",
                sub: "I know I messed up, but my heart is still yours üíó"
            },
            {
                text: "Can I be yours again and fix everything?",
                emoji: "üíû",
                sub: "I'll spend every day proving I'm worth it üåπ"
            },
            {
                text: "One last question, Mithila‚Ä¶ Can we write our love story again?",
                emoji: "üìñ",
                sub: "This time, the pages will only be filled with your smile üíï"
            }
        ];
        let index = 0;
        let yesSize = 20;
        let noSize = 18;
        // ‚îÄ‚îÄ Theme toggle ‚îÄ‚îÄ
        function toggleTheme() {
            document.body.classList.toggle('dark-mode');
            const btn = document.getElementById('themeToggle');
            btn.textContent = document.body.classList.contains('dark-mode') ? '‚òÄÔ∏è' : 'üåô';
        }
        // ‚îÄ‚îÄ Update progress dots ‚îÄ‚îÄ
        function updateDots() {
            const dots = document.querySelectorAll('.progress .dot');
            dots.forEach((dot, i) => {
                dot.classList.remove('active', 'done');
                if (i < index) dot.classList.add('done');
                if (i === index) dot.classList.add('active');
            });
        }
        // ‚îÄ‚îÄ Funny "not yet" messages for Yes button ‚îÄ‚îÄ
        const funnyYesMessages = [
            "Slow down speedster! It's too early üèéÔ∏èüí®",
            "Nice try! You haven't earned it yet üòè",
            "Nope! You're missing out on the good stuff üçø",
            "Whoa whoa‚Ä¶ read the questions first! üìñüòÇ",
            "Too easy! Make me work for it üèãÔ∏è",
            "Patience, young grasshopper üßò‚Äç‚ôÄÔ∏è",
            "That button isn't ready yet‚Ä¶ but you are cute üòò",
            "Error 404: Forgiveness not yet loaded ‚è≥",
            "Shhh‚Ä¶ the Yes button is sleeping üí§",
            "You clicked Yes? In THIS economy?! üìâüòÇ",
            "Hold up! The drama isn't over yet üé≠",
            "The audacity! At least hear me out first üò§üíï",
            "I admire your enthusiasm but NOT YET üö´üòÜ",
            "Bruh. Read the room‚Ä¶ and the next question üëÄ",
            "Your finger is fast but my heart needs time üíì",
            "Denied! Try clicking No for the full experience ‚ú®",
            "Are you speedrunning forgiveness?! üéÆüòÇ",
            "Plot twist: you need to suffer a little first üòàüíó",
            "That was a test click right? ‚Ä¶Right? ü§î",
            "Save that energy for the final question! üî•",
        ];
        let usedMessages = [];
        function getRandomMessage() {
            if (usedMessages.length >= funnyYesMessages.length) usedMessages = [];
            let msg;
            do {
                msg = funnyYesMessages[Math.floor(Math.random() * funnyYesMessages.length)];
            } while (usedMessages.includes(msg));
            usedMessages.push(msg);
            return msg;
        }
        // ‚îÄ‚îÄ Toast notification ‚îÄ‚îÄ
        function showToast(message) {
            // Remove any existing toast
            const old = document.querySelector('.toast');
            if (old) old.remove();
            const toast = document.createElement('div');
            toast.className = 'toast';
            toast.textContent = message;
            document.body.appendChild(toast);
            // Wiggle the yes button
            const yesBtn = document.getElementById('yesBtn');
            if (yesBtn) {
                yesBtn.style.animation = 'none';
                yesBtn.offsetHeight;
                yesBtn.style.animation = 'shake 0.4s ease';
            }
            setTimeout(() => {
                toast.classList.add('out');
                setTimeout(() => toast.remove(), 400);
            }, 2200);
        }
        // ‚îÄ‚îÄ "Yes" handler ‚îÄ‚îÄ
        function yesAnswer() {
            // Only allow on the last question
            if (index < questions.length - 1) {
                showToast(getRandomMessage());
                return;
            }
            // Final question ‚Äî celebrate!
            const card = document.getElementById('mainCard');
            card.style.transition = 'opacity 0.4s ease, transform 0.4s ease';
            card.style.opacity = '0';
            card.style.transform = 'translate(-50%, -50%) scale(0.8)';
            setTimeout(() => {
                card.style.display = 'none';
                // Launch confetti
                launchConfetti();
                // Show celebration
                const celebration = document.createElement('div');
                celebration.className = 'celebration';
                celebration.innerHTML = `
            <div class="big-heart">üíñ</div>
            <h1>YAYYYYY, MITHILA! üò≠‚ú®</h1>
            <h2>You just made me the happiest person alive!</h2>
            <h3>I promise to cherish you forever ü•∞</h3>
            <div class="personal-message">
                <p>
                    Dear Mithila,<br><br>
                    From this moment on, I'll be the reason you smile every day.
                    Thank you for believing in us ‚Äî in <em>me</em>.
                    You are my forever and always. üåπ
                </p>
                <div class="signature">‚Äî Forever yours üíå</div>
            </div>
        `;
                document.body.appendChild(celebration);
            }, 400);
        }
        // ‚îÄ‚îÄ "No" handler ‚îÄ‚îÄ
        function noAnswer() {
            index++;
            yesSize += 8;
            noSize = Math.max(10, noSize - 3);
            const yesBtn = document.getElementById('yesBtn');
            const noBtn = document.getElementById('noBtn');
            const qEl = document.getElementById('question');
            const subEl = document.getElementById('subtitle');
            const topper = document.getElementById('topperEmoji');
            const card = document.getElementById('mainCard');
            // Shake the card ‚Äî ensure it stays visible
            card.style.opacity = '1';
            card.style.transform = 'translate(-50%, -50%) scale(1)';
            card.style.animation = 'none';
            card.offsetHeight; // reflow
            card.style.animation = 'shake 0.5s ease';
            yesBtn.style.fontSize = yesSize + 'px';
            yesBtn.style.padding = `${16 + index * 3}px ${38 + index * 6}px`;
            noBtn.style.fontSize = noSize + 'px';
            noBtn.style.opacity = Math.max(0.45, 1 - index * 0.12);
            if (index < questions.length) {
                // Fade transition
                qEl.style.opacity = '0';
                subEl.style.opacity = '0';
                setTimeout(() => {
                    qEl.textContent = questions[index].text;
                    subEl.textContent = questions[index].sub;
                    topper.textContent = questions[index].emoji;
                    qEl.style.opacity = '1';
                    subEl.style.opacity = '1';
                    updateDots();
                }, 300);
            } else {
                // Sad ending
                card.innerHTML = `
            <div class="sad-ending">
                <div class="sad-emoji">üíî</div>
                <h1 id="question" style="font-family:'Dancing Script',cursive; font-size:2em; margin-bottom:12px;">
                    I understand‚Ä¶
                </h1>
                <p class="subtitle" style="margin-bottom:0;">
                    I'll always respect your decision. Thank you for hearing me out.<br>
                    I hope you find all the happiness you deserve. ü§ç
                </p>
            </div>
        `;
            }
        }
        // ‚îÄ‚îÄ Confetti explosion ‚îÄ‚îÄ
        function launchConfetti() {
            const colors = ['#ff6b81', '#ff4d6d', '#f8a5c2', '#ffd32a', '#7efff5', '#18dcff', '#cd84f1', '#ffaf40', '#ff5e57', '#0be881'];
            const shapes = ['circle', 'square', 'strip'];
            for (let i = 0; i < 150; i++) {
                const piece = document.createElement('div');
                piece.className = 'confetti-piece';
                const shape = shapes[Math.floor(Math.random() * shapes.length)];
                const color = colors[Math.floor(Math.random() * colors.length)];
                const size = Math.random() * 8 + 6;
                piece.style.left = Math.random() * 100 + 'vw';
                piece.style.top = '-5vh';
                piece.style.background = color;
                piece.style.width = size + 'px';
                piece.style.height = (shape === 'strip' ? size * 3 : size) + 'px';
                piece.style.borderRadius = shape === 'circle' ? '50%' : (shape === 'strip' ? '3px' : '2px');
                piece.style.animation = `confettiFall ${Math.random() * 2 + 2.5}s ease-in ${Math.random() * 1.5}s forwards`;
                document.body.appendChild(piece);
                setTimeout(() => piece.remove(), 5000);
            }
            // Second burst
            setTimeout(() => {
                for (let i = 0; i < 80; i++) {
                    const piece = document.createElement('div');
                    piece.className = 'confetti-piece';
                    const color = colors[Math.floor(Math.random() * colors.length)];
                    const size = Math.random() * 6 + 5;
                    piece.style.left = Math.random() * 100 + 'vw';
                    piece.style.top = '-5vh';
                    piece.style.background = color;
                    piece.style.width = size + 'px';
                    piece.style.height = size + 'px';
                    piece.style.borderRadius = '50%';
                    piece.style.animation = `confettiFall ${Math.random() * 2 + 2}s ease-in ${Math.random() * 1}s forwards`;
                    document.body.appendChild(piece);
                    setTimeout(() => piece.remove(), 4500);
                }
            }, 800);
        }
        // ‚îÄ‚îÄ Floating hearts ‚îÄ‚îÄ
        const heartEmojis = ['üíñ', 'üíï', 'üíó', 'üíì', '‚ù§Ô∏è', 'ü©∑', 'üå∏'];
        setInterval(() => {
            const heartsContainer = document.getElementById('hearts');
            if (!heartsContainer) return;
            const heart = document.createElement('div');
            heart.className = 'heart';
            heart.style.left = Math.random() * 100 + 'vw';
            heart.style.fontSize = (Math.random() * 18 + 16) + 'px';
            heart.style.animationDuration = (Math.random() * 4 + 5) + 's';
            heart.innerHTML = heartEmojis[Math.floor(Math.random() * heartEmojis.length)];
            heartsContainer.appendChild(heart);
            setTimeout(() => heart.remove(), 9000);
        }, 600);
        // ‚îÄ‚îÄ Background sparkles ‚îÄ‚îÄ
        (function createSparkles() {
            for (let i = 0; i < 30; i++) {
                const sparkle = document.createElement('div');
                sparkle.className = 'sparkle';
                sparkle.style.left = Math.random() * 100 + 'vw';
                sparkle.style.top = Math.random() * 100 + 'vh';
                sparkle.style.animationDelay = (Math.random() * 5) + 's';
                sparkle.style.animationDuration = (Math.random() * 3 + 2) + 's';
                document.body.appendChild(sparkle);
            }
        })();
    </script>
</body>
</html>
